<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Online Bookstore</title>
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
    }
    td, th {
      padding: 10px;
    }
    .actions {
      display: flex;
      gap: 5px;
    }
    /* Modal Styles */
    #updateModal {
      display: none;
      position: fixed;
      top: 20%;
      left: 35%;
      width: 30%;
      padding: 20px;
      background: white;
      border: 2px solid black;
      box-shadow: 0px 0px 10px #00000066;
    }
    #updateModal input {
      display: block;
      width: 100%;
      margin-bottom: 10px;
      padding: 5px;
    }
    #modalOverlay {
      display: none;
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.5);
    }
  </style>
</head>
<body>
  <h1>üìö Online Bookstore</h1>

  <h2>Add a New Book</h2>
  <form action="/books/add" method="POST">
    <input type="text" name="title" placeholder="Title" required>
    <input type="text" name="author" placeholder="Author" required>
    <input type="number" name="price" placeholder="Price" required>
    <input type="text" name="genre" placeholder="Genre" required>
    <button type="submit">‚ûï Add Book</button>
  </form>

  <h2>üìñ Book List</h2>
  <table>
    <tr>
      <th>Title</th><th>Author</th><th>Price</th><th>Genre</th><th>Actions</th>
    </tr>
    <% books.forEach(book => { %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.genre %></td>
        <td class="actions">
          <button onclick='openUpdateModal("<%= book._id %>", "<%= book.title %>", "<%= book.author %>", "<%= book.price %>", "<%= book.genre %>")'>‚úèÔ∏è Update</button>
          <form action="/books/delete" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this book?')">
            <input type="hidden" name="id" value="<%= book._id %>">
            <button type="submit">üóëÔ∏è Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>

  <!-- Modal Overlay -->
  <div id="modalOverlay"></div>

  <!-- Update Modal -->
  <div id="updateModal">
    <h3>Update Book</h3>
    <form id="updateForm" action="/books/update" method="POST">
      <input type="hidden" name="id" id="updateId">
      <input type="text" name="title" id="updateTitle" required>
      <input type="text" name="author" id="updateAuthor" required>
      <input type="number" name="price" id="updatePrice" required>
      <input type="text" name="genre" id="updateGenre" required>
      <button type="submit">‚úÖ Submit</button>
      <button type="button" onclick="closeUpdateModal()">‚ùå Cancel</button>
    </form>
  </div>

  <script>
    function openUpdateModal(id, title, author, price, genre) {
      document.getElementById('updateId').value = id;
      document.getElementById('updateTitle').value = title;
      document.getElementById('updateAuthor').value = author;
      document.getElementById('updatePrice').value = price;
      document.getElementById('updateGenre').value = genre;

      document.getElementById('modalOverlay').style.display = 'block';
      document.getElementById('updateModal').style.display = 'block';
    }

    function closeUpdateModal() {
      document.getElementById('modalOverlay').style.display = 'none';
      document.getElementById('updateModal').style.display = 'none';
    }
  </script>
</body>
</html>
